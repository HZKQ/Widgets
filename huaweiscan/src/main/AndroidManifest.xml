<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.keqiang.huaweiscan">

    <!--相机权限-->
    <uses-permission android:name="android.permission.CAMERA" />
    <!--文件读取权限-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application>
        <activity
            android:name=".ScanCodeActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|layoutDirection|screenSize|screenLayout|uiMode|fontScale"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />

        <activity
            android:name=".HuaWeiScanActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|layoutDirection|screenSize|screenLayout|uiMode|fontScale"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing|stateAlwaysHidden" />
    </application>
</manifest>