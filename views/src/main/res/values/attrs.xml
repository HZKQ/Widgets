<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SettingItemView">
        <attr name="siv_left_image" format="reference" />
        <attr name="siv_left_image_size" format="dimension|reference" />
        <attr name="siv_left_image_show" format="boolean" />
        <attr name="siv_right_image" format="reference" />
        <attr name="siv_right_image_size" format="dimension|reference" />
        <attr name="siv_right_image_show" format="boolean" />
        <attr name="android:text" />
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="siv_text_padding_left" format="dimension|reference" />
        <attr name="siv_text_padding_right" format="dimension|reference" />
    </declare-styleable>

    <declare-styleable name="ExtendEditText">
        <attr name="ee_clearButtonEnabled" format="boolean"/>
        <attr name="ee_clearButtonIcon" format="reference"/>
        <attr name="ee_clearButtonSize" format="dimension"/>
        <attr name="ee_clearButtonWidth" format="dimension"/>
        <attr name="ee_clearButtonHeight" format="dimension"/>
        <attr name="ee_hintTextSize" format="dimension"/>

        <!--始终绘制在右侧-->
        <attr name="ee_clearButtonPaddingLeft" format="dimension"/>
        <attr name="ee_clearButtonPaddingRight" format="dimension"/>
        <attr name="ee_clearButtonMarginLeft" format="dimension"/>
        <attr name="ee_clearButtonMarginRight" format="dimension"/>

        <!--是否自动根据宽度换行，解决原生汉字英文数字混合文本换行位置不尽如人意-->
        <attr name="ee_auto_wrap_by_width" format="boolean" />
        <!--当文本行数超过1行时是否自动切换靠左排版-->
        <attr name="ee_auto_gravity_rtl" format="flags">
            <flag name="none" value="0" />
            <flag name="end" value="1" />
            <flag name="center_horizontal" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ExtendTextView">
        <!--是否自动根据宽度换行，解决原生汉字英文数字混合文本换行位置不尽如人意-->
        <attr name="et_auto_wrap_by_width" format="boolean" />
        <!--当文本行数超过1行时是否自动切换靠左排版-->
        <attr name="et_auto_gravity_rtl" format="flags">
            <flag name="none" value="0" />
            <flag name="end" value="1" />
            <flag name="center_horizontal" value="2" />
        </attr>
    </declare-styleable>
</resources>