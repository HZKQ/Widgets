<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CombinationLayoutActivity"
    tools:ignore="PxUsage,HardcodedText">

    <me.zhouzhuo810.magpiex.ui.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_title_height"
        android:background="@color/colorPrimary"
        app:ttb_showLeftImg="false"
        app:ttb_showLeftLayout="false"
        app:ttb_textColorAll="@color/colorWhite"
        app:ttb_textSizeTitle="@dimen/base_title_text_size"
        app:ttb_titleText="自组合布局" />

    <TextView
        android:id="@+id/tv_test"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_title_height"
        android:layout_marginStart="40px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="30px"
        android:layout_marginEnd="40px"
        android:layout_marginRight="40px"
        android:background="@drawable/btn_main_selector"
        android:gravity="center"
        android:onClick="onClickTest"
        android:text="测试界面"
        android:textColor="@color/colorWhite"
        android:textSize="40px"
        android:visibility="gone"
        tools:visibility="visible" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_title_height"
        android:layout_marginStart="40px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="30px"
        android:layout_marginEnd="40px"
        android:layout_marginRight="40px"
        android:background="@drawable/btn_main_selector"
        android:gravity="center"
        android:onClick="onClickColumnLayout"
        android:text="LazyColumn简单展示"
        android:textColor="@color/colorWhite"
        android:textSize="40px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_title_height"
        android:layout_marginStart="40px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="30px"
        android:layout_marginEnd="40px"
        android:layout_marginRight="40px"
        android:background="@drawable/btn_main_selector"
        android:gravity="center"
        android:onClick="onClickMultiColumnLayout"
        android:text="多LazyColumn组合展示"
        android:textColor="@color/colorWhite"
        android:textSize="40px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_title_height"
        android:layout_marginStart="40px"
        android:layout_marginLeft="40px"
        android:layout_marginTop="30px"
        android:layout_marginEnd="40px"
        android:layout_marginRight="40px"
        android:background="@drawable/btn_main_selector"
        android:gravity="center"
        android:onClick="onClickColumnRowLayout"
        android:text="LazyColumn和LazyRow混合展示"
        android:textColor="@color/colorWhite"
        android:textSize="40px" />

</LinearLayout>