<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MPChartActivity">

    <me.zhouzhuo810.magpiex.ui.widget.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_title_height"
        android:background="@color/colorPrimary"
        app:ttb_showLeftImg="false"
        app:ttb_showLeftLayout="false"
        app:ttb_textColorAll="@color/colorWhite"
        app:ttb_textSizeTitle="@dimen/base_title_text_size"
        app:ttb_titleText="图表库" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_title_height"
                android:layout_marginStart="40px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="30px"
                android:layout_marginEnd="40px"
                android:layout_marginRight="40px"
                android:background="@drawable/btn_main_selector"
                android:gravity="center"
                android:onClick="onSimpleChartClick"
                android:text="简易图标库"
                android:textColor="@color/colorWhite"
                android:textSize="40px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_title_height"
                android:layout_marginStart="40px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="30px"
                android:layout_marginEnd="40px"
                android:layout_marginRight="40px"
                android:background="@drawable/btn_main_selector"
                android:gravity="center"
                android:onClick="onPieChartClick"
                android:text="饼状图"
                android:textColor="@color/colorWhite"
                android:textSize="40px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_title_height"
                android:layout_marginStart="40px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="30px"
                android:layout_marginEnd="40px"
                android:layout_marginRight="40px"
                android:background="@drawable/btn_main_selector"
                android:gravity="center"
                android:onClick="onLineChartClick"
                android:text="折线图"
                android:textColor="@color/colorWhite"
                android:textSize="40px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_title_height"
                android:layout_marginStart="40px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="30px"
                android:layout_marginEnd="40px"
                android:layout_marginRight="40px"
                android:background="@drawable/btn_main_selector"
                android:gravity="center"
                android:onClick="onBarChartClick"
                android:text="柱状图"
                android:textColor="@color/colorWhite"
                android:textSize="40px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_title_height"
                android:layout_marginStart="40px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="30px"
                android:layout_marginEnd="40px"
                android:layout_marginRight="40px"
                android:background="@drawable/btn_main_selector"
                android:gravity="center"
                android:onClick="onRadarChartClick"
                android:text="雷达图"
                android:textColor="@color/colorWhite"
                android:textSize="40px" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_title_height"
                android:layout_marginStart="40px"
                android:layout_marginLeft="40px"
                android:layout_marginTop="30px"
                android:layout_marginEnd="40px"
                android:layout_marginRight="40px"
                android:background="@drawable/btn_main_selector"
                android:gravity="center"
                android:onClick="onMoreChartClick"
                android:text="更多图像用例"
                android:textColor="@color/colorWhite"
                android:textSize="40px" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>